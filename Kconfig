menu "4D Systems ESP32-S3 4D LCD Display Selection"

choice
    prompt "Select your display series"

config ESP32S3_4DLCD_24
    bool "gen4-ESP32-24 Series"
    select LCD_INTERFACE_SPI
    help
      Select this if your 4D display is 2.4-inch

config ESP32S3_4DLCD_28
    select LCD_INTERFACE_SPI
    bool "gen4-ESP32-28 Series"
    help
      Select this if your 4D display is 2.8-inch

config ESP32S3_4DLCD_32
    bool "gen4-ESP32-32 Series"
    select LCD_INTERFACE_SPI
    help
      Select this if your 4D display is 3.2-inch

config ESP32S3_4DLCD_35
    bool "gen4-ESP32-35 Series"
    select LCD_INTERFACE_SPI
    help
      Select this if your 4D display is 3.5-inch

config ESP32S3_4DLCD_43Q
    bool "gen4-ESP32Q-43 Series"
    select LCD_INTERFACE_QSPI
    help
      Select this if your 4D display is 4.3-inch QSPI (480x272)

